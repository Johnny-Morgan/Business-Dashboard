<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Tooltip?>
<BorderPane fx:id="mainPanel" fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Customers">
                    <items>
                        <MenuItem text="Add..." onAction="#showAddCustomerDialog"/>
                        <MenuItem text="Edit..." onAction="#showEditCustomerDialog"/>
                        <MenuItem text="Delete" onAction="#deleteCustomer"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="customersTable" onKeyPressed="#handleKeyPressed">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="First Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Last Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Phone Number">
                    <cellValueFactory>
                        <PropertyValueFactory property="phoneNum"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Email Address">
                    <cellValueFactory>
                        <PropertyValueFactory property="email"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">

            <Button text="Add New Customer" onAction="#showAddCustomerDialog">
                <tooltip>
                    <Tooltip text="Add a New Customer"/>
                </tooltip>
            </Button>

            <Button text="Edit Customer Details" onAction="#showEditCustomerDialog">
                <tooltip>
                    <Tooltip text="Edit Customer Details"/>
                </tooltip>
            </Button>

            <Button text="Delete Customer" onAction="#deleteCustomer">
                <tooltip>
                    <Tooltip text="Delete a Customer"/>
                </tooltip>
            </Button>
            
        </HBox>
    </bottom>
</BorderPane>