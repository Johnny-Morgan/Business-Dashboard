<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<AnchorPane fx:id="mainPanelTodo" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.TodoController">

    <BorderPane prefWidth="1000" prefHeight="510">
        <top>
            <VBox>
                <ToolBar>
                    <HBox spacing="10">
                        <ToggleButton fx:id="filterToggleButton" text="Today's Items" onAction="#handleFilterButton"
                                      style="-fx-background-color: #e17055; -fx-text-fill: white">
                            <tooltip>
                                <Tooltip text="Button Down: Show Today's items only. Button Up: Show all items"/>
                            </tooltip>
                        </ToggleButton>
                    </HBox>
                </ToolBar>
            </VBox>
        </top>

        <left>
            <ListView fx:id="todoListView" onKeyPressed="#handleKeyPressed" onMouseClicked="#enableButtons">

            </ListView>
        </left>
        <center>
            <VBox style="-fx-background-color: white">
                <TextArea fx:id="itemDetailsTextArea" VBox.vgrow="ALWAYS" wrapText="true"/>
                <HBox prefHeight="40">
                    <Label text="Due: ">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    <Label fx:id="deadlineLabel">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                </HBox>
            </VBox>
        </center>

        <bottom>

            <HBox spacing="10" alignment="CENTER" maxHeight="15">

                <Button text="New todo Item" onAction="#showNewItemDialog"
                        style="-fx-background-color: green; -fx-text-fill: white">
                    <tooltip>
                        <Tooltip text="Add a New Todo Item"/>
                    </tooltip>
                    <HBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </HBox.margin>
                </Button>


                <Button fx:id="editButton" text="Edit todo Item" onAction="#showEditTodoItemDialog"
                        style="-fx-background-color: #3498db; -fx-text-fill: white">
                    <tooltip>
                        <Tooltip text="Add a New Todo Item"/>
                    </tooltip>
                    <HBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </HBox.margin>
                </Button>


                <Button fx:id="deleteButton" text="Delete todo Item" onAction="#deleteItem"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white">
                    <tooltip>
                        <Tooltip text="Add a New Todo Item"/>
                    </tooltip>
                    <HBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </HBox.margin>
                </Button>

                <Button fx:id="exitButton" text="Exit" onAction="#exitApplication"
                        style="-fx-background-color: black; -fx-text-fill: white" prefWidth="75" textAlignment="CENTER">
                    <tooltip>
                        <Tooltip text="Exit Application"/>
                    </tooltip>
                    <HBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </HBox.margin>
                </Button>
            </HBox>
            
        </bottom>
    </BorderPane>
</AnchorPane>
